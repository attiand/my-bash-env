#!/bin/bash -e


usage() { 
   echo "Push to Gerrit"
   echo
   echo "Syntax: git review [OPTIONS] [BRANCH]"
   echo 
   echo "OPTIONS:"
   echo "-o     Specify git push options"
   echo "-h     Print this help"
   echo
   echo "BRANCH - The branch to push to, use current checked-out branch if not specified"
   echo 
   echo "Examples"
   echo 
   echo "git review -o topic=bugfix master"
   echo "git review -o \"m=#AS\" -o \"l=Code-Review+2\""
} 

while getopts "o:h" OPTION; do
    case $OPTION in
    o)
        PUSH_OPTION="$PUSH_OPTION -o $OPTARG"
        ;;
    ?)
        usage
        exit 0
        ;;
    h)
        usage
        exit 0
        ;;
    *)
        echo "Incorrect options provided"
        exit 1
        ;;
    esac
done

shift $((OPTIND-1))

if [ -z $1 ]
then
  TARGET_BRANCH=$(git rev-parse --abbrev-ref HEAD)
else
  TARGET_BRANCH=$1
fi

echo "Push review for $TARGET_BRANCH"
git push origin $PUSH_OPTION HEAD:refs/for/$TARGET_BRANCH
